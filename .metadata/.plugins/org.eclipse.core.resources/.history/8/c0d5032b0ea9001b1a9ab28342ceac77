package StepDefinitions;

import static org.junit.Assert.*;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

import common.NavigateTo;
import common.initWeb;
import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;
import userdefinedfunctions.SampleTestPage.mySettingsPage;

public class SampleTest_StepDef {
	initWeb webTest = new initWeb();
	mySettingsPage settingsFunc = new mySettingsPage();
	NavigateTo navTo = new NavigateTo();

	
	@Given("user is accessing my account page with \"([^\"]*)\",\"([^\"]*)\"$")
	public void loginToSite(String amaysimNo, String amaysimPw) {
		webTest.webChrome();
		try{navTo.myAmaysimDashboard(amaysimNo, amaysimPw);
		} catch (Exception e){
			System.out.println(e);
			
		}
	}
	
	@When("user navigates to settings page")
	public void goToSettings() {
		try	{navTo.myAmaysimSettings();;
		} 
		catch (Exception e){
			System.out.println(e);
		}
		
	}
	
	@And("update sim nickname with \"([^\"]*)\"$")
	public void updateNick(String simNickname) {
		System.out.println(settingsFunc.updateSimNick(simNickname));
		
//		
//		try {
//			assertEquals("Update success", ));
//		}
//		catch (Exception e) {
//			assertEquals("Failed", false, true);
//		}
	
	}
	
	@And("update recharge pin with \"([^\"]*)\"$")
	public void updateRechargePin(String rechargepin) {
		System.out.println(settingsFunc.updateRechargePin(rechargepin));
		
	}

	
	
	@Then("all changes should work as expected")
	public void expectedBehaviour() {
		 System.out.println("something1");
		webTest.closeBrowser();
}
}
